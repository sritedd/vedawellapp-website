    "redFlags": {
        "preContract": [
            {
                "warning": "Builder won't provide HBCF/Home Warranty Insurance certificate before signing",
                "severity": "critical",
                "action": "Do NOT sign contract without valid insurance certificate dated for your project"
            },
            {
                "warning": "'Site costs not included' in fixed price contract",
                "severity": "high",
                "action": "Get soil test and site report BEFORE signing, negotiate fixed site costs"
            },
            {
                "warning": "Builder pressuring you to sign quickly",
                "severity": "high",
                "action": "Good builders don't pressure. Take 5-day cooling off period in NSW"
            },
            {
                "warning": "Verbal promises not in contract",
                "severity": "critical",
                "action": "If it's not in writing, it doesn't exist. Get everything in the contract"
            }
        ],
        "duringConstruction": [
            {
                "warning": "Inspection requested day-of or 'already done'",
                "severity": "critical",
                "action": "All inspections must be booked in advance. Request certificate before any payment"
            },
            {
                "warning": "Constant variations for 'unforeseen' issues",
                "severity": "high",
                "action": "If variations exceed 10% of contract, flag for review. 15%+ is concerning"
            },
            {
                "warning": "Builder becomes hard to contact",
                "severity": "high",
                "action": "Document all communication. 2+ weeks unresponsive = escalate to HBCF"
            },
            {
                "warning": "Work proceeding without inspections",
                "severity": "critical",
                "action": "STOP PAYMENT. Work without inspection may void insurance"
            }
        ],
        "atHandover": [
            {
                "warning": "Demanding payment before Occupation Certificate",
                "severity": "critical",
                "action": "This is illegal in most states. No OC = No final payment"
            },
            {
                "warning": "'Sign off now, we'll fix defects later'",
                "severity": "critical",
                "action": "NEVER do this. Document ALL defects in writing before signing"
            },
            {
                "warning": "Missing any mandatory certificates",
